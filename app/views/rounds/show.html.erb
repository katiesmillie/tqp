<script type="text/javascript">
    mixpanel.track("View Round")
</script>

  <% if @future_round.nil? %>
  <div class="alert alert-success">
  <%=  link_to "Choose tomorrow's question!", new_question_path %></div>
<% end %>

   <%= @round.round_date.to_date.to_s(:long)%></p>
   
   <h3 align="center"><%= @question.body %></h3>
 
    <% @answers.each do |a| %>    

      <div class="well">
       <%= gravatar_for a.user, :size => 40, :class => "pic" %> 
       <p>  <!-- <span class = "username"><%= a.user.first_name %></span> -->
        <%= a.body %> 
        <% answer_edit(a) do %>
        <span class = "edit pull-right"><%= link_to "edit", edit_answer_path(a)%></span></p>
        
          <% end %>
      </div>   

    <% end %>
            
<hr>
    
  <div class="container-narrow comments">
    <% comment_present(@round) do %>
            
        <% @comments.each do |c| %>
        <%= gravatar_for c.author, :size => 30, :class => "pic" %> 
          <p><!-- <span class = "username"><%=c.author.first_name%></span> -->
          <%= c.body %>
         
            <% comment_edit(c) do %>
              <span class ="edit pull-right"><%= link_to "edit", edit_comment_path(c)%></span></p>
            <% end %>
          <p class ="tiny muted"><%= c.created_at.to_date.to_s(:long)%>        
          </p>
        <% end %>

    <% end %>
      
      <%= form_tag comments_path do %>
      <%= text_area_tag :body, nil, :class => "input commentbox roboto", :maxlength =>"255" %>
      <p><%= submit_tag "add a comment", :class => "btn btn-success roboto"%></p>
      <%= hidden_field_tag :round_id, @round.id %>
      <% end %>
    </div>


