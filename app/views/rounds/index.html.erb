<script type="text/javascript">
    mixpanel.track("Home Page Loaded")
</script>


  <% if params[:question_id] %>
    <h4>Nice work answering that question!</h4>



  <% elsif @my_answer || @my_round %>
    <div class ="row">
      <h4>You've already answered a question today. Come back tomorrow!</h4>
    </div> 

  <% elsif @partner_round %>
    <div class ="row">
      <div class="span5">
        <h4><%= Time.now.to_date.to_s(:long) %></h4>
        <h3> <%= @question.body %></h3>
      </div>
      <div class="span5">
        <%= form_tag answers_path do %>
        <%= text_area_tag :body, nil, :class => "input answerbox", :maxlength =>"255" %>
        <%= submit_tag "Submit", :class => "btn" %>
        <%= hidden_field_tag :question_id, @question.id %>
         <% end %>
      </div>
    </div> 
      
  <% else %>
   <div class ="row">
      <div class="span5">
        <p><%= Time.now.to_date.to_s(:long) %></p>
        <h3> <%= @question.body %></h3>
        <div class="spacing20"></div>
        <p><%=  link_to "New question", root_path %> </p>
        <p><%=  link_to "Create your own", new_question_path %></p>
      </div>

      <div class="span5">
           <div class="spacing20">  </div>   
        <%= form_tag answers_path do %>
        <%= text_area_tag :body, nil, :class => "input answerbox", :maxlength =>"255" %>
        <%= submit_tag "Submit", :class => "btn" %>
        <%= hidden_field_tag :question_id, @question.id %>
        <% end %>
      </div>
    </div>  
           
  <% end %>


<div class="row">
  <div class="spacing20"></div>
</div>

<div class="row">
  <% @rounds.each do |r| %>
   

    <% if r.round_date.month == 1 %>
      <div class="index-well jan"> 
    <% elsif r.round_date.month == 2 %>
      <div class="index-well feb"> 
    <% elsif r.round_date.month == 3 %>
      <div class="index-well mar">
    <% elsif r.round_date.month == 4 %>
      <div class="index-well apr">
    <% elsif r.round_date.month == 5 %>
      <div class="index-well may">
    <% elsif r.round_date.month == 6 %>
      <div class="index-well jun">
    <% elsif r.round_date.month == 7 %>
      <div class="index-well jul">
    <% elsif r.round_date.month == 8 %>
      <div class="index-well aug">

    <%end%>

      <div class="top">
      <h5><%= r.round_date.to_date.to_s(:short) %></h5>
      <p> <%= r.question.body %></p>
      </div>

 <div class="clearfix">
  <div class="bottom">

      <% if r.answers.where(:user_id => @user.id).first %>
       <p class="bottom-label"> <%= link_to "View", round_path(r) %></p>
      <% elsif r.answers.where(:user_id => @partner.id).first %>
      <p class="bottom-label"><%= link_to "#{@partner.first_name}'s answer", round_path(r) %></p>
      <% else %>
        <p class="bottom-label"><%= link_to "Answer", round_path(r) %></p>
       
      <% end %> 


  </div> 
 </div>

  

    </div>
  <% end %>
  </div>

